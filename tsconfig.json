{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es2022",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@tests/*": ["test/*"]
    },
  },
  "exclude": ["./node_modules", "./dist"]
}
